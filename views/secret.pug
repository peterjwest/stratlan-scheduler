extends layout.pug


block body
    if valid
        if alreadyFound
            h1(class="text-2xl font-semibold mb-4") This secret has already been found.
            p Better luck next time!
        else
            h1(class="text-2xl font-semibold mb-4") You found a secret!
            p=`Good job! +${points} points`
    else
        h1(class="text-2xl font-semibold mb-4") Nothing to see here...
