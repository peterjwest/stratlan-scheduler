extends ../../layout.pug

block body
    h2(class="text-2xl font-semibold mb-4") Manage LANs

    div(class="grid grid-cols-[repeat(5,max)]")
        div(class="grid grid-cols-subgrid col-span-5 font-bold")
            span(class="px-3 py-2 self-center") Name
            span(class="px-3 py-2 self-center") Discord role
            span(class="px-3 py-2 self-center") Starts at
            span(class="px-3 py-2 self-center") Ends at
            span(class="px-3 py-2 self-center") Schedule dates

        for lan of lans
            a(href=`/admin/lans/${lan.id}` class="grid grid-cols-subgrid col-span-5 hover:bg-highlight border-t border-border/50")
                span(class="px-3 py-2 self-center")=lan.name
                span(class="px-3 py-2 self-center")
                    span(class="inline-block px-1.5 py-1 rounded-lg bg-highlight/60 border border-highlight-accent")
                        =lan.role
                span(class="px-3 py-2 self-center")
                    if lan.eventStart
                        time(datetime=helpers.formatTimestamp(lan.eventStart))
                            =helpers.formatDateTime(lan.eventStart)
                span(class="px-3 py-2 self-center")
                    if lan.eventEnd
                        time(datetime=helpers.formatTimestamp(lan.eventEnd))
                            =helpers.formatDateTime(lan.eventEnd)
                span(class="px-3 py-2 self-center")
                    =`${helpers.formatDate(lan.scheduleStart)} to ${helpers.formatDate(lan.scheduleEnd)}`


    a(href="/admin/lans/create", class="inline-block mt-3 py-1.5 px-3.5 rounded-md border border-border/50 bg-highlight") Create LAN
