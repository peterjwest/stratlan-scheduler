extends ../../layout.pug

block body
    form(action=helpers.routeUrl(routes.admin.codes.get, code.id) method="post" class="mb-3")
        input(type="hidden" name="csrf" value=csrfToken)

        div(class="sm:flex items-start")
            div(class="flex-grow")
                h2(class="text-2xl font-semibold mb-4") Edit hidden code
                div(class="grid grid-cols-[repeat(3,max-content)] ")
                    label(class="py-2 px-3 grid grid-cols-subgrid col-span-3")
                        span(class="py-2 pr-3") Name
                        input(name="name" type="text" required value=code.name maxlength="256" class="py-2 px-3.5 border border-border/80 rounded-sm")

                    div(class="mt-2 flex gap-2 mb-4")
                        input(type="submit" name="submit" value="Save" class="py-1.5 px-3 rounded-md border border-border/80 bg-highlight")

            div(class="flex flex-col items-center gap-3")
                div(class="h-40 w-40 mt-2 mr-2" data-hidden-code=code.url)
                button(class="py-1.5 px-3 rounded-md border border-border/80 bg-highlight" data-print-button)
                    | Print

block print
    div(class="w-full h-[1000px] flex items-center justify-center")
        div
            div(class="h-100 w-100" data-hidden-code=code.url)
            p(class="text-center my-2 text-black text-lg")=`#${code.number}`
