extends ../../layout.pug

block body
    form(action=`/admin/codes/create` method="post")
        h2(class="text-2xl font-semibold mb-4") Create hidden code

        input(type="hidden" name="csrf" value=csrfToken)

        div(class="grid grid-cols-[repeat(2,max-content)]")
            label(class="py-2 px-3 grid grid-cols-subgrid col-span-3")
                span(class="py-2 pr-3") Name
                input(name="name" type="text" required maxlength="256" class="py-2 px-3.5 border border-border/80 rounded-sm")

            div(class="mt-2 flex gap-2")
                input(type="submit" name="submit" value="Create" class="py-1.5 px-3 rounded-md border border-border/80 bg-highlight")
