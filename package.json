    "lodash": "^4.17.21",
    "node-steam-openid": "^2.0.0",
    "pg": "^8.16.3",
    "pug": "^3.0.3",
    "puppeteer": "^24.27.0",
    "session-file-store": "^1.5.0",
    "tailwindcss": "^4.1.11",
    "zod": "^4.0.13"
  }
}
