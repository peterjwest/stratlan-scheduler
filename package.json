  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterjwest/stratlan.git"
  },
  "scripts": {
    "start": "tsx index.ts",
    "start:dev": "tsx --env-file=.env index.ts",
    "build": "pnpm static:build && pnpm css:build && npx puppeteer browsers install chrome",
    "static:build": "rsync -a --exclude='style.css' public build/",
    "css:build": "npx --no -- @tailwindcss/cli -i ./public/style.css -o ./build/public/style.css",
    "css:watch": "pnpm css:build --watch",
    "db:generate": "rm -f drizzle/meta/.DS_Store && drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "heroku-postbuild": "npm run build && mkdir  ./.cache && mv /app/.cache/puppeteer ./.cache"
  },
  "devDependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/lodash": "^4.17.20",
    "@types/node-steam-openid": "^1.0.3",
    "drizzle-kit": "^0.31.6",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "connect-pg-simple": "^10.0.0",
